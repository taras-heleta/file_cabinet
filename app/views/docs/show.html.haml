.wrapper_with_padding
  #doc_show
    %h1= @doc.title
    %p= simple_format(@doc.content)

    .buttons
      = link_to "All Docs", docs_path, class: "button"
      = link_to "Fix Doc", edit_doc_path(@doc), class: "button"
      = button_to "Trash It", doc_path(@doc), method: :delete, form: { data: { turbo_confirm: 'message' }}, class: "button"
